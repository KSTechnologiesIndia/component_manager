import("//build/component/component.gni")

executable("hello_program") {
  deps = [
    "//apps/component_manager/services",
    "//apps/modular/lib/app",
    "//lib/fidl/cpp/bindings",
    "//lib/ftl",
    "//lib/mtl",
  ]

  sources = [
    "hello_component.cc",
